#!/bin/bash
# open a browser to file rekeywordreq for package(s) ${*}

set -e

pkgs=${*}
nl=$'\n'
exec xdg-open "https://bugs.gentoo.org/enter_bug.cgi?product=Gentoo%20Linux&component=Keywording&bug_severity=enhancement&short_desc=$(urlencode <<<"${pkgs// /, }: rekeyword")&cf_stabilisation_atoms=$(urlencode <<<"${pkgs// /${nl}}")&keywords=CC-ARCHES&comment=Please+restore+keywords."
